<div class="col-lg-12 col-md-12">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Users Form</h5>

      <div class="mb-3">
        <label for="input-name" class="form-label">Name</label>
        <input
          type="text"
          id="input-name"
          name="name"
          class="form-control"
          value="<%= data?.name %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="inputUsr" class="form-label">Username:</label>
        <input
          type="text"
          id="inputUsr"
          name="username"
          class="form-control"
          value="<%= data?.username %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="input-email" class="form-label">Email:</label>
        <input
          type="text"
          id="input-email"
          name="email"
          class="form-control"
          value="<%= data?.email %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="input-country" class="form-label">Country:</label>
        <div class="area-input">
          <% if(data){%>
          <span class="text-primary w-25"><%= data.location %></span>
          <%}%>
          <select
            id="input-country"
            name="country"
            class="form-select"
            aria-label="Country"
          ></select>
        </div>
      </div>
      <div class="mb-3">
        <label for="role" class="col-md-2 col-form-label">Role</label>
        <div class="col-md-6">
        <select
            name="role"
            id="role"
            class="form-select w-25"
        >
            <option value="admin" <%= data?.role == 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="user" <%= data?.role == 'user' ? 'selected' : '' %>>User</option>
        </select>
        </div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
        />
      </div>
    </div>
  </div>
</div>
