<div class="container mt-5">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General Information</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="performance-tab" data-toggle="tab" href="#performance" role="tab" aria-controls="performance" aria-selected="false">Performance Specs</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="electric-tab" data-toggle="tab" href="#electric" role="tab" aria-controls="electric" aria-selected="false">Electric and Hybrid</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="engine-tab" data-toggle="tab" href="#engine" role="tab" aria-controls="engine" aria-selected="false">Engine Specs</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="dimensions-tab" data-toggle="tab" href="#dimensions" role="tab" aria-controls="dimensions" aria-selected="false">Dimensions</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="drivetrain-tab" data-toggle="tab" href="#drivetrain" role="tab" aria-controls="drivetrain" aria-selected="false">Drivetrain & Suspension</a>
    </li>
  </ul>

  <form id="carForm" action="/admin/cars/add" method="post">
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
        <%- include('./partials/form/general_information.ejs') %>
      </div>

      <div class="tab-pane fade" id="performance" role="tabpanel" aria-labelledby="performance-tab">
        <h3>Performance Specs</h3>
        <label for="power">Power:</label>
        <input type="text" id="power" name="power"><br><br>
        <label for="acceleration">Acceleration:</label>
        <input type="text" id="acceleration" name="acceleration"><br><br>
        <!-- More fields here -->
      </div>

      <div class="tab-pane fade" id="electric" role="tabpanel" aria-labelledby="electric-tab">
        <h3>Electric and Hybrid</h3>
        <label for="battery">Battery:</label>
        <input type="text" id="battery" name="battery"><br><br>
        <label for="range">Range:</label>
        <input type="text" id="range" name="range"><br><br>
        <!-- More fields here -->
      </div>

      <div class="tab-pane fade" id="engine" role="tabpanel" aria-labelledby="engine-tab">
        <h3>Engine Specs</h3>
        <label for="engineType">Engine Type:</label>
        <input type="text" id="engineType" name="engineType"><br><br>
        <label for="displacement">Displacement:</label>
        <input type="text" id="displacement" name="displacement"><br><br>
        <!-- More fields here -->
      </div>

      <div class="tab-pane fade" id="dimensions" role="tabpanel" aria-labelledby="dimensions-tab">
        <h3>Dimensions</h3>
        <label for="length">Length:</label>
        <input type="text" id="length" name="length"><br><br>
        <label for="width">Width:</label>
        <input type="text" id="width" name="width"><br><br>
        <!-- More fields here -->
      </div>

      <div class="tab-pane fade" id="drivetrain" role="tabpanel" aria-labelledby="drivetrain-tab">
        <h3>Drivetrain & Suspension</h3>
        <label for="drivetrainType">Drivetrain Type:</label>
        <input type="text" id="drivetrainType" name="drivetrainType"><br><br>
        <label for="suspension">Suspension:</label>
        <input type="text" id="suspension" name="suspension"><br><br>
        <!-- More fields here -->
      </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
  </form>
</div>