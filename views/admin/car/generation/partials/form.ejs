<div class="col-lg-12 col-md-12">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Model Form</h5>

      <div class="row mb-2">
        <label for="input-brand" class="col-md-2 col-lg-2 col-form-label"
          >Brand</label
        >
        <div id="area-input" class="col-md-6 col-lg-6">
          <% if(data.brand){%>
          <span class="text-primary w-50"><%= data.brand %></span>
          <%}%>
          <select
            id="input-brand"
            name="brand_id"
            class="form-select"
            style="width: 100%"
            aria-label="Brand"
          ></select>
          <a
            class="nav-link <%= currentPage === 'admin-index' ? 'active' : 'collapsed' %>"
            href="/admin/cars-brands"
          >
            <i class="icon-plus-circle"></i>
          </a>
        </div>
      </div>

      <div class="row mb-2">
        <label for="input-model" class="col-md-2 col-lg-2 col-form-label"
          >Model</label
        >
        <div id="area-input" class="col-md-6 col-lg-6">
          <% if(data.model){%>
          <span class="text-primary w-50"><%= data.model %></span>
          <%}%>
          <select
            id="input-model"
            name="model_id"
            class="form-select"
            style="width: 100%"
            aria-label="Model"
          ></select>
          <a
            class="nav-link <%= currentPage === 'admin-index' ? 'active' : 'collapsed' %>"
            href="/admin/cars-brands"
          >
            <i class="icon-plus-circle"></i>
          </a>
        </div>
      </div>

      <div class="row g-3 mb-3">
        <label for="name" class="col-md-2 col-form-label">Name</label>
        <div class="col-md-6">
          <input
            name="name"
            type="text"
            class="form-control"
            id="name"
            placeholder="Enter generation name"
            value="<%= data?.name %>"
          />
        </div>
      </div>

      <div class="row g-3 mb-3" id="model-image">
        <label for="generation_image" class="col-md-2 col-form-label"
          >Image</label
        >
        <div class="col-md-6">
          <div id="image-preview-container">
            <img
              id="image-preview"
              src="<%= data?.image_path || '/assets/nice-iconly/assets/img/preview.png' %>"
              class="img-thumbnail"
              alt="Image Preview"
            />
          </div>
          <div class="pt-2">
            <label
              for="input-image"
              class="btn btn-primary btn-sm"
              title="Upload image"
            >
              <i class="icon-upload"></i>
              <input
                name="generation_image"
                type="file"
                id="input-image"
                accept="image/*"
                style="display: none"
              />
            </label>
            <a
              href="#"
              class="btn btn-danger btn-sm"
              title="Remove image"
              id="remove-image"
            >
              <i class="icon-trash-alt"></i>
            </a>
          </div>
        </div>
      </div>
      <div class="row g-3 mb-3">
        <label for="flag" class="col-md-2 col-form-label">Flag</label>
        <div class="col-md-6">
        <select
            name="flag"
            id="flag"
            class="form-select"
        >
            <option value="red" <%= data?.flag == 'red' ? 'selected' : '' %>>Red</option>
            <option value="green" <%= data?.flag == 'green' ? 'selected' : '' %>>Green</option>
        </select>
        </div>
    </div>
    </div>
  </div>
</div>
