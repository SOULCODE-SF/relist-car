<div class="container mt-5">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a
        class="nav-link active"
        id="general-tab"
        data-toggle="tab"
        href="#general"
        role="tab"
        aria-controls="general"
        aria-selected="true"
        >General Information</a
      >
    </li>
    <li class="nav-item">
      <a
        class="nav-link"
        id="performance-tab"
        data-toggle="tab"
        href="#performance"
        role="tab"
        aria-controls="performance"
        aria-selected="false"
        >Performance Specs</a
      >
    </li>
    <li class="nav-item">
      <a
        class="nav-link"
        id="engine-specs-tab"
        data-toggle="tab"
        href="#engine-specs"
        role="tab"
        aria-controls="engine-specs"
        aria-selected="false"
        >Engines</a
      >
    </li>
    <li class="nav-item">
      <a
        class="nav-link"
        id="dimensions-tab"
        data-toggle="tab"
        href="#dimensions"
        role="tab"
        aria-controls="dimensions"
        aria-selected="false"
        >Dimensions</a
      >
    </li>
    <li class="nav-item">
      <a
        class="nav-link"
        id="spaces-tab"
        data-toggle="tab"
        href="#spaces"
        role="tab"
        aria-controls="spaces"
        aria-selected="false"
        >Spaces</a
      >
    </li>
    <li class="nav-item">
      <a
        class="nav-link"
        id="electric-tab"
        data-toggle="tab"
        href="#electric"
        role="tab"
        aria-controls="electric"
        aria-selected="false"
        >Electric and Hybrid</a
      >
    </li>
    <li class="nav-item">
      <a
        class="nav-link"
        id="drivetrain-tab"
        data-toggle="tab"
        href="#drivetrain"
        role="tab"
        aria-controls="drivetrain"
        aria-selected="false"
        >Drivetrain & Suspension</a
      >
    </li>
  </ul>

  <% if (error) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% } %>

  <form
    id="carForm"
    action="/admin/cars/update/<%= data.car.car_id %>"
    method="post"
  >
    <div class="tab-content" id="myTabContent">
      <div
        class="tab-pane fade show active"
        id="general"
        role="tabpanel"
        aria-labelledby="general-tab"
      >
        <%- include('./partials/form/general_information.ejs') %>
      </div>

      <div
        class="tab-pane fade"
        id="performance"
        role="tabpanel"
        aria-labelledby="performance-tab"
      >
        <%- include('./partials/form/performance_specs.ejs') %>
      </div>
      <div
        class="tab-pane fade"
        id="engine-specs"
        role="tabpanel"
        aria-labelledby="engine-specs-tab"
      >
        <%- include('./partials/form/engine_specs.ejs') %>
      </div>

      <div
        class="tab-pane fade"
        id="dimensions"
        role="tabpanel"
        aria-labelledby="dimensions-tab"
      >
        <%- include('./partials/form/dimensions.ejs') %>
      </div>

      <div
        class="tab-pane fade"
        id="spaces"
        role="tabpanel"
        aria-labelledby="spaces-tab"
      >
        <%- include('./partials/form/spaces.ejs') %>
      </div>

      <div
        class="tab-pane fade"
        id="electric"
        role="tabpanel"
        aria-labelledby="electric-tab"
      >
        <%- include('./partials/form/electric_spec.ejs') %>
      </div>

      <div
        class="tab-pane fade"
        id="drivetrain"
        role="tabpanel"
        aria-labelledby="drivetrain-tab"
      >
        <%- include('./partials/form/drivetrain.ejs') %>
      </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
  </form>
</div>
