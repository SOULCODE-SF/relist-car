<div class="col-lg-12 col-md-12">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Performance Spec</h5>
      <div class="form-group d-grid gap-3">
        <div class="row">
          <label for="input-brand" class="col-md-2 col-lg-2 col-form-label"
            >Brand</label
          >
          <div id="area-input" class="col-md-6 col-lg-4">
            <select
              id="input-brand"
              name="brand_name"
              class="form-select"
              style="width: 100%"
              aria-label="Brand"
            ></select>
            <a
              class="nav-link <%= currentPage === 'admin-index' ? 'active' : 'collapsed' %>"
              href="/admin"
            >
              <i class="icon-plus-circle"></i>
            </a>
          </div>
        </div>
        <div class="row">
          <label for="input-model" class="col-md-2 col-lg-2 col-form-label"
            >Model</label
          >
          <div id="area-input" class="col-md-6 col-lg-4">
            <select
              id="input-model"
              name="model_name"
              class="form-select"
              style="width: 100%"
              aria-label="Model"
            ></select>
            <a
              class="nav-link <%= currentPage === 'admin-index' ? 'active' : 'collapsed' %>"
              href="/admin"
            >
              <i class="icon-plus-circle"></i>
            </a>
          </div>
        </div>
        <div class="row" id="engine">
          <label for="input-engine" class="col-md-2 col-lg-2 col-form-label"
            >Engine</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="engine"
              type="text"
              class="form-control"
              id="input-engine"
            />
          </div>
        </div>
        <div class="row">
          <label for="start-production" class="col-md-2 col-lg-2 col-form-label"
            >Start Production</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="start_production"
              type="date"
              class="form-control"
              id="input-start-production"
            />
          </div>
        </div>
        <div class="row">
          <label for="end-production" class="col-md-2 col-lg-2 col-form-label"
            >End Production</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="end_production"
              type="date"
              class="form-control"
              id="input-end-production"
            />
          </div>
        </div>
        <div class="row" id="powertrain-architecture">
          <label
            for="input-powertrain-architecture"
            class="col-md-2 col-lg-2 col-form-label"
            >Powertrain Architecture</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="powertrain_architecture"
              type="text"
              class="form-control"
              id="input-powertrain-architecture"
            />
          </div>
        </div>
        <div class="row" id="body-type">
          <label for="input-body-type" class="col-md-2 col-lg-2 col-form-label"
            >Body Type</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="body_type"
              type="text"
              class="form-control"
              id="input-body-type"
            />
          </div>
        </div>
        <div class="row" id="seat">
          <label for="input-seat" class="col-md-2 col-lg-2 col-form-label"
            >Seat</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="seat"
              type="text"
              class="form-control"
              id="input-seat"
            />
          </div>
        </div>
        <div class="row" id="door">
          <label for="input-door" class="col-md-2 col-lg-2 col-form-label"
            >Door</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="door"
              type="text"
              class="form-control"
              id="input-door"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
