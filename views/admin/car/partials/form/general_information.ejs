<div class="col-lg-12 col-md-12">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">General Information</h5>
      <div class="form-group d-grid gap-3">
        <div class="row">
          <label for="input-brand" class="col-md-2 col-lg-2 col-form-label"
            >Brand</label
          >
          <div id="area-input" class="col-md-6 col-lg-4">
            <% if(data.car){%>
            <span class="text-primary w-25"><%= data.car.brand_name %></span>
            <%}%>
            <select
              id="input-brand"
              name="brand_id"
              class="form-select"
              style="width: 100%"
              aria-label="Brand"
            ></select>
            <a
              class="nav-link <%= currentPage === 'admin-index' ? 'active' : 'collapsed' %>"
              href="/admin"
            >
              <i class="icon-plus-circle"></i>
            </a>
          </div>
        </div>
        <div class="row">
          <label for="input-model" class="col-md-2 col-lg-2 col-form-label"
            >Model</label
          >
          <div id="area-input" class="col-md-6 col-lg-4">
            <% if(data.car){%>
            <span class="text-primary w-25"><%= data.car.model_name %></span>
            <%}%>
            <select
              id="input-model"
              name="model_id"
              class="form-select"
              style="width: 100%"
              aria-label="Model"
            ></select>
            <a
              class="nav-link <%= currentPage === 'admin-index' ? 'active' : 'collapsed' %>"
              href="/admin"
            >
              <i class="icon-plus-circle"></i>
            </a>
          </div>
        </div>
        <div class="row">
          <label for="input-generation" class="col-md-2 col-lg-2 col-form-label"
            >Generation</label
          >
          <div id="area-input" class="col-md-6 col-lg-4">
            <% if(data.car){%>
            <span class="text-primary w-25"
              ><%= data.car.generation_name %></span
            >
            <%}%>
            <select
              id="input-generation"
              name="generation_id"
              class="form-select"
              style="width: 100%"
              aria-label="Generation"
            ></select>
            <a
              class="nav-link <%= currentPage === 'admin-index' ? 'active' : 'collapsed' %>"
              href="/admin"
            >
              <i class="icon-plus-circle"></i>
            </a>
          </div>
        </div>
        <div class="row" id="engine">
          <label for="input-engine" class="col-md-2 col-lg-2 col-form-label"
            >Engine</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="engine"
              type="text"
              class="form-control"
              id="input-engine"
              value="<%= data.car?.engine %>"
            />
          </div>
        </div>
        <div class="row" id="start_production">
          <label
            for="input-start_production"
            class="col-md-2 col-lg-2 col-form-label"
            >Start Production</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="start_production"
              type="text"
              class="form-control"
              id="input-start_production"
              value="<%= data.car?.start_production %>"
            />
          </div>
        </div>
        <div class="row" id="end_production">
          <label
            for="input-end_production"
            class="col-md-2 col-lg-2 col-form-label"
            >End Production</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="end_production"
              type="text"
              class="form-control"
              id="input-end_production"
              value="<%= data.car?.end_production %>"
            />
          </div>
        </div>
        <div class="row" id="powertrain-architecture">
          <label
            for="input-powertrain-architecture"
            class="col-md-2 col-lg-2 col-form-label"
            >Powertrain Architecture</label
          >
          <div class="col-md-6 col-lg-4">
            <div class="d-flex gap-2">
              <select
                name="powertrain_architecture"
                id="input-powertrain-architecture"
                class="form-control"
                onchange="toggleCustomInput()"
              >
                <option value="">-- Select an Option --</option>
                <% data.powertrain_architecture.forEach(arch => { %>
                  <option
                    value="<%= arch.powertrain_architecture %>"
                    <%= data.car?.powertrain_architecture === arch.powertrain_architecture ? 'selected' : '' %>
                  >
                    <%= arch.powertrain_architecture %>
                  </option>
                <% }); %>
                <option value="custom">Other (please specify)</option>
              </select>
            </div>
            <input
              name="new_powertrain_architecture"
              type="text"
              class="form-control mt-2 custom"
              id="input-new-powertrain-architecture"
              placeholder="Please specify"
            />
          </div>
        </div>
        <div class="row" id="body-type">
          <label for="input-body-type" class="col-md-2 col-lg-2 col-form-label"
            >Body Type</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="body_type"
              type="text"
              class="form-control"
              id="input-body-type"
              value="<%= data.car?.body_type %>"
            />
          </div>
        </div>
        <div class="row" id="seat">
          <label for="input-seat" class="col-md-2 col-lg-2 col-form-label"
            >Seat</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="seat"
              type="text"
              class="form-control"
              id="input-seat"
              value="<%= data.car?.seat %>"
            />
          </div>
        </div>
        <div class="row" id="door">
          <label for="input-door" class="col-md-2 col-lg-2 col-form-label"
            >Door</label
          >
          <div class="col-md-6 col-lg-4">
            <input
              name="door"
              type="text"
              class="form-control"
              id="input-door"
              value="<%= data.car?.door %>"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
