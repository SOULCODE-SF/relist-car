<section class="section">
  <!-- Horizontal Form -->
  <form class="row" id="testimonial-form" action="">
    <div class="col-lg-12 col-md-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Banner Form</h5>
          <div class="form-group d-grid gap-3">
            <div class="row">
              <label for="ads_name" class="col-md-2 col-lg-2 col-form-label"
                >Ads Name</label
              >
              <div class="col-md-6 col-lg-4">
                <input
                  name="ads_name"
                  type="text"
                  class="form-control"
                  id="input-ads-name"
                  value="nama iklan"
                />
              </div>
            </div>
            <div class="row">
              <label for="ads_position" class="col-md-2 col-lg-2 col-form-label"
                >Ads Position (ada beberapa posisi)</label
              >
              <div class="col-md-6 col-lg-4">
                <select
                  name="ads_position"
                  id="input-ads-position"
                  aria-label="Ads Position"
                  class="form-select"
                >
                  <option value="bawah-judul">Bawah Judul</option>
                  <option value="bawah-konten">Bawah Konten</option>
                </select>
              </div>
            </div>
            <div class="row">
              <label for="ads_type" class="col-md-2 col-lg-2 col-form-label"
                >Ads Type</label
              >
              <div class="col-md-6 col-lg-4">
                <select
                  name="ads_type"
                  id="input-ads-type"
                  aria-label="Ads Type"
                  class="form-select"
                >
                  <option value="code">Code</option>
                  <option value="image">Image</option>
                  <option value="url">Url</option>
                </select>
              </div>
            </div>
            <div class="row" id="ads-code">
              <label
                for="input-ads-code"
                class="col-md-2 col-lg-2 col-form-label"
                >Ads Code</label
              >
              <div class="col-md-6 col-lg-6">
                <textarea
                  name="ads_code"
                  placeholder=""
                  id="input-ads-code"
                  style="height: 150px"
                  class="form-control"
                ></textarea>
              </div>
            </div>
            <div class="row" id="ads-image">
              <label
                for="input-ads-image"
                class="col-md-2 col-lg-2 col-form-label"
                >Ads Image</label
              >
              <div class="col-md-6 col-lg-4">
                <div id="image-preview-container">
                  <img
                    id="image-preview"
                    src="assets/img/preview.png"
                    class="img-thumbnail"
                  />
                </div>
                <div class="pt-2">
                  <label
                    for="input-image"
                    class="btn btn-primary btn-sm"
                    title="Upload image"
                  >
                    <i class="icon-upload"></i>
                    <input
                      type="file"
                      id="input-image"
                      accept="image/*"
                      style="display: none"
                    />
                  </label>
                  <a
                    href="#"
                    class="btn btn-danger btn-sm"
                    title="Remove image"
                    id="remove-image"
                  >
                    <i class="icon-trash-alt"></i>
                  </a>
                </div>
              </div>
            </div>
            <div class="row" id="ads-url">
              <label
                for="input-ads-url"
                class="col-md-2 col-lg-2 col-form-label"
                >Ads Url</label
              >
              <div class="col-md-6 col-lg-4">
                <input
                  name="ads_url"
                  type="text"
                  class="form-control"
                  id="input-ads-url"
                  value="http://kamuskita.com"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</section>
