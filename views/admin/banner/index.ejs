<div class="pagetitle mb-3">
  <div class="row align-items-center">
    <div class="col-md-8 mt-2">
      <h1 class="fs-4 mb-1">Banner List</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item active">Banner List</li>
        </ol>
      </nav>
    </div>
    <div class="col-md-4">
      <div class="text-end">
        <a href="/admin/banner/add" type="button" class="btn btn-primary"
          >Add Banner</a
        >
      </div>
    </div>
  </div>
</div>
<!-- End Page Title -->
<section class="section">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Banner List</h5>
          <table
            id="datatable"
            class="table table-hover table-bordered dt-responsive"
            style="border-collapse: collapse; border-spacing: 0; width: 100%"
          >
            <thead>
              <tr>
                <th>Id</th>
                <th>Ads Name</th>
                <th>Type</th>
                <th>Position</th>
                <th>Date Start</th>
                <th>Date End</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% banners.forEach((data, i) => { %>
              <tr>
                <td><%= data.id %></td>
                <td><%= data.adsname %></td>
                <td><%= data.type %></td>
                <td><%= data.position %></td>
                <td><%= data.start_date %></td>
                <td><%= data.end_date %></td>
                <td><%= data.status %></td>
                <td class="tw-100">
                  <a
                    href="/admin/banner/edit/<%= data.id %>"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    title="Edit"
                    class="btn btn-warning btn-sm"
                    data-id="id-post"
                    ><i class="icon-edit"></i
                  ></a>
                  <a
                    href="#"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    title="Delete"
                    class="btn btn-danger btn-sm"
                    data-id="id-post"
                    ><i class="icon-trash-alt"></i
                  ></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
