<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title><%= title ?? 'Default Title' %></title>
    <meta name="description" content="<%= memories.meta_description %>" />
    <!-- Favicons -->
    <link rel="canonical" href="<%= memories.site_url %>" />
    <link rel="icon" href="<%= memories.favicon %>" type="image/x-icon" />
    <link
      href="/assets/nice-iconly/assets/img/apple-touch-icon.png"
      rel="apple-touch-icon"
    />
    <!-- Preload CSS -->
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      as="style"
    />
    <link
      rel="preload"
      href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css"
      as="style"
    />
    <link
      rel="preload"
      href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.bootstrap5.min.css"
      as="style"
    />
    <link
      rel="preload"
      href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css"
      as="style"
    />
    <link
      rel="preload"
      href="/assets/nice-iconly/assets/vendor/iconly/iconly.min.css"
      as="style"
    />
    <!-- Preload JS -->
    <link
      rel="preload"
      href="/assets/nice-iconly/assets/vendor/jquery/jquery-3.6.1.min.js"
      as="script"
    />
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      as="script"
    />
    <link
      rel="preload"
      href="/assets/nice-iconly/assets/vendor/datatables/datatables.min.js"
      as="script"
    />
    <link
      rel="preload"
      href="/assets/nice-iconly/assets/vendor/datatables/dataTables.bootstrap5.min.js"
      as="script"
    />
    <link
      rel="preload"
      href="/assets/nice-iconly/assets/vendor/datatables/responsive.bootstrap5.min.js"
      as="script"
    />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- Vendor CSS Files -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="/assets/nice-iconly/assets/vendor/iconly/iconly.min.css"
      rel="stylesheet"
    />
    <!-- Template Main CSS File -->
    <link href="/assets/nice-iconly/assets/css/style.css" rel="stylesheet" />
    <!-- DataTables -->
    <link
      href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.bootstrap5.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css"
      rel="stylesheet"
      type="text/css"
    />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.min.js"></script>
  </head>
  <body>
    <%- include('./partials/header.ejs') %>
    <%-include('./partials/sidebar.ejs')%>
    <main id="main" class="main">
      <% if (alert) { %>
      <div
        id="alert-container"
        class="alert <%= alert.type %> alert-dismissible fade show mt-3 alert-custom"
        role="alert"
      >
        <div class="d-flex align-items-center">
          <div class="loading-spinner me-2"></div>
          <span style="padding-right: 20px"><%= alert.message %></span>
          <button
            type="button"
            class="btn-close text-white"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
      </div>
      <% } %> <%- body %>
    </main>
    <%-include('./partials/footer.ejs') %>
  </body>
  <script src="/assets/nice-iconly/assets/vendor/jquery/jquery-3.6.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/nice-iconly/assets/vendor/apexcharts/apexcharts.min.js"></script>

  <!-- Required datatable js -->
  <script src="/assets/nice-iconly/assets/vendor/datatables/datatables.min.js"></script>
  <script src="/assets/nice-iconly/assets/vendor/datatables/dataTables.bootstrap5.min.js"></script>
  <!-- Responsive examples -->
  <script src="/assets/nice-iconly/assets/vendor/datatables/responsive.bootstrap5.min.js"></script>
  <!-- Template Main JS File -->
  <script src="/assets/nice-iconly/assets/js/main.js"></script>
  <script src="/assets/js/script.js"></script>
  <script src="/assets/nice-iconly/assets/vendor/tinymce/tinymce.min.js"></script>
  <script src="/assets/js/select2.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#datatable').DataTable();
    });
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      var alertElement = document.getElementById('alert-container');
      if (alertElement) {
        setTimeout(() => {
          var alert = bootstrap.Alert.getOrCreateInstance(alertElement);
          alert.close();
        }, 3000);
      }
    });
  </script>
</html>
