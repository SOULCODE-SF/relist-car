<div class="home">
  <section class="container text-center p-5 mb-5">
    <span class="text-danger fw-semibold">WELCOME TO <%= site_name %></span>
    <h1 class="fw-bold mt-3">Best Way to Find Your Dream Car</h1>
    <p style="max-width: 600px; margin: 20px auto; font-size: 20px;" class="text-secondary">
      There are many variations of passages orem psum available but the majority have suffered alteration in some form by injected humour.
    </p>
    <div class="flex-lg-wrap" style="gap: 10px;">
      <button class="theme-btn w-auto">About More</button>
      <button class="btn-white w-auto">Learn More</button>
    </div>
  </section>
  <section class="hero bg-light position-relative">
    <form id="car-form" action="/api/search-car" method="POST">
      <div class="w-75 bg-white shadow-sm p-3" style="height: 200px; position: absolute; top: -60px; left: 12%; border-radius: 8px;">
        <h3 class="fw-bold">Let's Find Your Car</h3>
        <div class="d-flex bg-light">
          <div class="row w-50 align-items-center">
            <label for="input-brand" class="col-3 col-form-label">Brand</label>
            <div id="area-input" class="col-8">
              <select id="input-brand" name="brand_id" class="form-select" style="width: 100%" aria-label="Brand"></select>
            </div>
          </div>
          <div class="row w-50 align-items-center">
            <label for="input-model" class="col-3 col-form-label">Model</label>
            <div id="area-input" class="col-8">
              <select id="input-model" name="model_id" class="form-select" style="width: 100%" aria-label="Model"></select>
            </div>
          </div>
        </div>
        <div class="d-flex">
          <div class="row w-50 align-items-center">
            <label for="input-generation" class="col-3 col-form-label">Generation</label>
            <div id="area-input" class="col-8">
              <select id="input-generation" name="generation_id" class="form-select" style="width: 100%" aria-label="Generation"></select>
            </div>
          </div>
          <div class="row w-50 align-items-center">
            <label for="input-engine" class="col-3 col-form-label">Engine</label>
            <div id="area-input" class="col-8">
              <select id="input-engine" name="engine" class="form-select" style="width: 100%" aria-label="Engine"></select>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-end mt-2">
          <button type="submit" class="w-auto theme-btn" >
            <i class="bi bi-search"></i> Search
          </button>
        </div>
      </div>
    </form>
    <div class="banner">
      
    </div>
  </section>
  <section class="recent-cars bg-light">
    <div class="recent-cars">
      <div class="title">
        <h3>NEW ARRIVALS</h3>
        <h1>Let's Check Latest <span>Cars</span></h1>
      </div>

      <div class="container p-4">
        <div class="row d-flex justify-content-center">
          <% datas.recentCars.forEach(rc => { %>
          <div class="col-11 col-sm-12 col-md-4 col-lg-2 d-flex">
            <a href="/specs/<%= rc.id %>" class="model-link flex-fill">
              <div class="recent-card d-flex flex-column">
                <div class="frame flex-grow-1">
                  <img
                    src="/assets/<%= rc.image_path %>"
                    alt="<%= meta_title %>"
                    onerror="this.onerror=null; this.src='/nomodels.webp';"
                    class="img-fluid"
                  />
                </div>
                <div class="card-content">
                  <p><%= rc.generation_name %></p>
                  <p><%= rc.engine %></p>
                  <h6><%= rc.body_type %></h6>
                </div>
              </div>
            </a>
          </div>
          <% }) %>
        </div>
      </div>   
    </div> 
  </section>
  <section class="brands">
    <div class="title text-center mt-4 mb-4">
      <h3>FEATURED COLLECTION</h3>
      <h1>Discover Top <span>Brands</span></h1>
    </div>
    <div class="brand-list bg-white">
      <% datas.brands.forEach(brand => { %>
        <a href="<%= brand.id === 'all-brand' ? '/brands' : '/brands/' + brand.id + '/models' %>" class="brand-card">
          <div class="brand">
            <img src="/assets<%= brand.image_path %>" alt="<%= meta_title %>" onerror="this.onerror=null; this.src='/notbrands.webp';">
            <h3><%= brand.name %></h3>
          </div>
        </a>
      <%}) %>
    </div>
  </section>
</div>
