<div class="content">
  <h1>Selamat datang di halaman utama!</h1>
  <p>Ini adalah halaman utama dari aplikasi Anda.</p>

  <section class="recent-cars">
    <div class="recently-added">
      <% recentCars.forEach(item => { %>
        <a href="/specs/<%= item.gl_id %>">
          <div class="car-card">
            <div class="frame">
              <img src="<%= item.image_path %>" alt="Relist">
            </div>
            <div class="detail">
              <h5><%= item.name %></h5>
              <h6><%= item.engine %></h6>
              <h6>
                <span><%= item.body_type %></span>
                <span><%= item.wheel_drive %></span>
              </h6>
            </div>
          </div>
        </a>
      <% }) %>
    </div>
  </section>
</div>
