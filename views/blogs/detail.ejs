<div class="container-fluid d-flex flex-column min-vh-100">
  <div class="row">
    <div class="col-12">
      <h1 class="mt-4 text-center"><%= data.title %></h1>
    </div>
  </div>
  <div class="row flex-fill">
    <div class="col-12">
      <img
        src="/assets/<%= data.image_path %>"
        alt="<%= data.title %>"
        class="blog-image img-thumbnail"
      />
      <div class="meta-info">
        <p><strong>Category:</strong> <%= data.category %></p>
        <p>
          <strong>Published on:</strong> <%= new
          Date(data.created_at).toLocaleDateString() %>
        </p>
      </div>
      <div class="content-wrap">
        <%- data.content || 'No content available' %>
      </div>
    </div>
  </div>
  <div class="row mt-auto">
    <div class="col-12 text-center">
      <p>&copy; 2024 Your Blog Name</p>
    </div>
  </div>
</div>
