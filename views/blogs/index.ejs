<section class="blog">
  <div class="site-breadcrumb">
    <div class="container d-flex flex-column align-items-center">
      <h1 class="breadcrumb-title">Our Blog</h1>
      <ul class="breadcrumb-menu">
        <li><a href="/">Home</a></li>
        <li>
          <i class="icon-chevron-right ms-auto"></i>
          <i class="icon-chevron-right ms-auto"></i>
        </li>
        <li class="active">Our Blog</li>
      </ul>
    </div>
  </div>
  <div class="container mt-4 pt-100 pb-80">
    <div class="title text-center">
      <h5>
        <span><b>OUR BLOG</b></span>
      </h5>
      <h1>Latest News <span>Blog</span></h1>
    </div>
    <div class="d-flex justify-content-center mb-4">
      <div class="heading-divider">
        <div class="bar"></div>
      </div>
    </div>
    <div class="d-flex justify-content-end">
      <form action="/blogs" method="GET" class="search-form d-flex">
        <input
          type="text"
          id="searchTerm"
          name="q"
          placeholder="search.."
          value="<%= searchTerm %>"
          class="p-1 px-2"
        />
        <button class="ms-2" type="submit">
          <i class="icon-search"></i>
        </button>
      </form>
    </div>
  </div>
  <div class="container">
    <div class="row mt-4">
      <% if(data.tag){ %>
      <p>Result of tag <%= data.tag %></p>
      <%}%> <% data.blogs.forEach(post => { %>
      <div class="col-md-4 mb-4 d-flex">
        <div class="card flex-fill d-flex flex-column">
          <div class="card-img-container">
            <img
              src="<%= post.image_path %>"
              class="card-img-top"
              alt="<%= memories.meta_title %>"
              style="height: 250px; width: 100%; object-fit: cover"
            />
          </div>
          <div class="card-body d-flex flex-grow-1 flex-column">
            <h6 class="card-text">
              <i class="icon-calendar text-red"></i> <%= post.published_date %>
            </h6>
            <hr />
            <h4 class="card-text"><%= post.title %></h4>
            <div class="mt-auto">
              <a
                href="/blogs/<%= post.slug %>"
                target="_blank"
                rel="noopener"
                class="theme-btn"
              >
                Go somewhere <i class="icon-arrow-right ms-2"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
      <% }); %> <% for (let i = data.length; i < 3; i++) { %>
      <div class="col-md-4 mb-4 d-flex">
        <div
          class="card flex-fill"
          style="height: 250px; visibility: hidden"
        ></div>
        <!-- Placeholder -->
      </div>
      <% } %>
    </div>
  </div>
</section>
