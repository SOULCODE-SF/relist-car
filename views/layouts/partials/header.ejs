<header class="header sticky-top bg-white shadow-sm py-2">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light">
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse p-2 row" id="navbarNav">
        <div
          class="col-12 col-md-4 d-flex align-items-center justify-content-center justify-content-md-start mb-3 mb-md-0"
        >
          <a
            href="/"
            class="logo d-flex align-items-center"
            style="color: black; text-decoration: none"
            onmouseover="this.style.color='red';"
            onmouseout="this.style.color='black';"
          >
            <img
              src="<%= memories.logo %>"
              width="50"
              height="50"
              alt="<%= memories.meta_title %>"
            />
            <span
              class="d-none d-lg-block text-uppercase"
              style="font-size: 20px; font-weight: 700; margin-left: 20px"
              ><%= memories.site_name %></span
            >
          </a>
        </div>
        <ul
          class="navbar-nav col-12 col-md-4 d-flex justify-content-center mb-3 mb-md-0"
        >
          <li class="nav-item">
            <a
              class="nav-link <%= currentPage === 'homes' ? 'active' : '' %>"
              href="/"
              >Home</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= ['brands', 'models', 'generations', 'specs', 'list-generation', 'car_by_engine', 'car_by_body'].includes(currentPage) ? 'active' : '' %>"
              href="/brands"
              >Cars</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link <%= currentPage === 'blogs' ? 'active' : '' %>"
              href="/blogs"
              >Blogs</a
            >
          </li>
        </ul>
        <ul
          class="navbar-nav col-12 col-md-4 d-flex justify-content-center justify-content-md-end"
        >
          <li class="nav-item">
            <a
              class="nav-link <%= currentPage === 'contact-us' ? 'active' : '' %>"
              href="/contact-us"
              >Contact</a
            >
          </li>
        </ul>
        <!-- <ul
          class="navbar-nav col-12 col-md-4 d-flex justify-content-center justify-content-md-end"
        >
          <% if(!session.username) { %>
          <li class="nav-item">
            <a
              class="nav-link <%= currentPage === 'login' ? 'active' : '' %>"
              href="/login"
              >Login</a
            >
          </li>
          <% } else { %>
          <li class="nav-item">
            <a class="btn btn-outline-danger" href="/logout">Logout</a>
          </li>
          <% } %>
        </ul> -->
      </div>
    </nav>
  </div>
</header>
