<div class="layout-brands">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a href="/brands" class="nav-link ">Autocatalog</a>
    </li>
    <li class="nav-item">
      <span class="arrow">&rarr;</span>
    </li>
    <li class="nav-item">
      <a href="#" class="nav-link active"><%= models[0].brand_name %></a>
    </li>
  </ul>
</div>


<div class="models">
  <% let currentLetter = ''; %>
  <% models.forEach(model => { %>
    <% if (model.name[0].toUpperCase() !== currentLetter) { %>
      <% currentLetter = model.name[0].toUpperCase(); %>
      <div class="letter"><%= currentLetter %></div>
    <% } %>
    <a href="/brands/models/<%= model.id %>/generations" class="model-card">
      <div class="model">
        <div class="frame">
          <img src="/assets<%= model.image_path %>" alt="<%= model.name %>" onerror="this.onerror=null; this.src='/nomodels.webp';">
        </div>
         <h3><%= model.name%></h3>
      </div>
    </a>
  <% }) %>
</div>

<a href="/brands">Back to Brands</a>